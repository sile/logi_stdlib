%% vim: set ft=erlang : -*- erlang -*-
{require_min_otp_vsn, "OTP17"}.

{erl_opts, [
            warnings_as_errors,
            warn_export_all,
            warn_untyped_record
           ]}.

{xref_checks, [fail_on_warning, undefined_function_calls]}.

{clean_files, [".eunit/*", "ebin/*.beam"]}.

{cover_enabled, true}.

{edoc_opts, [
             {dialyzer_specs, all}, {report_missing_type, true},
             {report_type_mismatch, true}, {pretty_print, erl_pp},
             {preprocess, true}
            ]}.

{validate_app_modules, true}.

{dialyzer,
 [
  {warnings, [error_handling, race_conditions, unmatched_returns, unknown]},
  {plt_extra_apps, [compiler]}
 ]}.


{shell_apps, [logi_stdlib]}.

{deps,
 [
  {logi, ".*", {git, "git://github.com/sile/logi.git", {tag, "0.2.0"}}}
 ]}.

{profiles,
 [
  {edown,
   [
    {edoc_opts,
     [
      {doclet, edown_doclet}
     ]},
    {deps,
     [
      {edown, {git, "git://github.com/uwiger/edown.git", {ref, "c770057f72d2163c718b26e49c572aefe0798ca9"}}}
     ]}
   ]}
 ]}.
